<%= form_for(@deals) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
    <%= f.text_area :day, placeholder: "Compose new deal..." %>
    <%= f.text_area :content, placeholder: "Compose new deal..." %>
  </div>
  <%= f.submit "Post", class: "btn btn-primary" %>
<% end %>
