<% provide(:title, 'Add Bar') %>
<h1>Add Bar</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@bar) do |f| %>
      <%= render 'shared/error_messages' %>
      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :address %>
      <%= f.text_field :address %>

      <%= f.submit "Add Bar", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
